application/msword; termite -- antiword '%s' & sleep 2; copiousoutput ; test=test -n "$DISPLAY";
application/msword; antiword '%s' ; copiousoutput;
image/*; feh '%s' ; test=test -n "$DISPLAY";
image/*; catimg '%s'; copiousoutput;
application/pdf; mupdf '%s' ; test=test -n "$DISPLAY";
application/pdf; pdftotext %s - | less ; copiousoutput;
application/octet-stream; ~/.mutt/view_attachment.sh %s "-";
text/html; qutebrowser %s & sleep 2; nametemplate=%s.html; test=test -n "$DISPLAY";
text/html; w3m -T text/html '%s' ; needsterminal;
text/html; w3m -T text/html -dump '%s' ; copiousoutput;
