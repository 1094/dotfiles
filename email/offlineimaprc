[general]
accounts = bored, dd3953
fsync = False
maxconnections = 3
socktimeout = 60
ui = blinkenlights

[Account bored]
localrepository = bored-local
remoterepository = bored-remote
postsynchook = ~/txt/mail/bored-hook

[Repository bored-local]
type = Maildir
localfolders = ~/.mail/bored
nametrans = lambda folder: {'drafts':   '[Gmail]/Drafts',
                            'sent':     '[Gmail]/Sent Mail',
                            'star':  '[Gmail]/Starred',
                            'trash':    '[Gmail]/Trash',
                            'archive':  '[Gmail]/All Mail',
			    'chats':	'[Gmail]/Chats',
                            }.get(folder, folder)


[Repository bored-remote]
type = Gmail
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
ssl_version = tls1_2
realdelete = yes
remoteuser = 
remotepass = 
nametrans = lambda folder: {'[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'star',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'archive',
			     '[Gmail]/Chats':     'chats',
                            }.get(folder, folder)
folderfilter = lambda folder: folder not in ['[Gmail]/Trash',
                                             '[Gmail]/Spam',
                                             ]


