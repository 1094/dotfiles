[general]
accounts = bored
fsync = False
maxconnections = 2
socktimeout = 60
ui = blinkenlights 

[Account bored]
localrepository = bored-local
remoterepository = bored-remote
postsynchook = ~/txt/mail/notmuch-hook
# autorefresh = 20 

[Repository bored-local]
type = Maildir
localfolders = ~/mail
nametrans = lambda folder: {'drafts':   '[Gmail]/Drafts',
                            'sent':     '[Gmail]/Sent Mail',
                            'star':  '[Gmail]/Starred',
                            'trash':    '[Gmail]/Trash',
                            'archive':  '[Gmail]/All Mail',
			    'chats':	'[Gmail]/Chats',
                            }.get(folder, folder)


[Repository bored-remote]
type = Gmail
realdelete = yes
remoteuser = username@email.com 
remotepass = password
nametrans = lambda folder: {'[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'star',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'archive',
			     '[Gmail]/Chats':     'chats',
                            }.get(folder, folder)
folderfilter = lambda folder: folder not in ['[Gmail]/Trash',
                                             '[Gmail]/Spam',
                                             ]

sslcacertfile = /etc/ssl/certs/ca-certificates.crt
