### refresh
alias 0Z="source /home/sir/.zshrc"
alias 0F="fc-cache -fv"
alias 0V="vim +PlugInstall +PlugClean +qall"

### email
alias mutt="mutt -F ~/.mutt/muttrc"
alias dsync="mbsync -a"
alias bsync="mbsync -a -c ~/.mbs-b"

### sdcv
alias def="sdcv --color -u 'WordNet'"
alias 정의="sdcv --color -u 'Korean-English Dic'"

### ls grep
alias ls="ls -F"
alias lsh="ls -AF"
alias lsl="ls -Fl"
alias lshl="ls -AFl"
alias grep="grep --color=always"

### pacman / yaourt
alias pacman="pacman --color always"
alias yaourt="yaourt --color"
alias pac-delete="sudo pacman -Rnssu"

### terminal
alias 0="exit"

### finder
alias mkdir="mkdir -p"
alias mv="mv -uv"
alias rmd="rm -irf"
alias cp="cp -irv"
alias zip="zip -r -db"

### system search
function zf {
       "fd -H $1 /"
        }

### size
alias ds="df -h && du -sh *"

### arch-wiki-manpages
alias aw="awman"
alias aws="awman -d -k"
alias awu="awman-update"

### rclone
alias rsync="rclone -v sync"
alias rcopy="rclone -v copy"

### youtube-dl
alias ytm="youtube-dl --extract-audio --audio-format mp3 --output '/home/sir/media/%(title)s.%(ext)s'"
alias ytv="youtube-dl --output '/home/sir/media/%(title)s.%(ext)s'"

### system
alias hold="systemctl suspend"
alias i3-exit="i3-msg exit"

