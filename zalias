## My Alias File
alias wta="cat /home/sir/.zalias | grep"

### vim
alias v3="vim /home/sir/.config/i3/config"
alias vq="vim /home/sir/.config/qtile/config.py"
alias vt="vim /home/sir/.config/termite/config"
alias vp="vim /home/sir/.config/polybar/config"
alias vv="vim /home/sir/.vimrc"
alias vz="vim /home/sir/.zshrc"
alias va="vim /home/sir/.zalias"
alias vD="vimdiff"
