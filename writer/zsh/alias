alias 0X="xrdb -load $HOME/.Xresources"
# RCLONE & CP
alias rsync="rclone -v sync"
alias rcopy="rclone -v copy"
alias cp="cp -irv"
alias zip="zip -r -db"
# YOUTUBE-DL
