# mounting /dev/sdc
alias y-mnt="$HOME/txt/setting/sdc-mount"
alias n-mnt="$HOME/txt/setting/usb-umount"

# VIM 
alias dv="$HOME/txt/setting/daily"
alias gv="vim -c :Goyo"
# DOTFILES
alias v3="vim $HOME/.config/i3/config"
