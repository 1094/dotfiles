# Account Settings -----------------------------------
set signature = ~/.mutt/b-sig 

# Default inbox.
set spoolfile = "~/mail/bored/INBOX"
set mbox = "~/mail/bored/archive"
set postponed = "~/mail/bored/drafts"

# Compose View Options -------------------------------
set realname = ""

# Sending Mail ---------------------------------------
set use_from=yes
set sendmail="/usr/bin/msmtp -a bored"
set sendmail_wait = 0
